<!DOCTYPE html>
<html>
	<head>
		<title>YelpCamp</title>
		<link rel="stylesheet"  type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
		<link rel="stylesheet" type="text/css" href="/stylesheet/main.css">
	</head>
	<body>
	<nav class=" navbarmargin navbar navbar-expand-lg navbar-light bg-light">
		  <a class="navbar-brand" href="/">YelpCamp</a>

		  <div class="collapse navbar-collapse" id="navbarSupportedContent">
		    <div class="ml-auto">

			    <ul class=" navbar-nav nav-item form-inline my-2 my-lg-0">
					<% if(!currentUser) { %>
						<li>
			    			<a  class="nav-link" href="/login">Log In</a>
			    		</li>
			    		<li>
			    			<a  class="nav-link" href="/register">Sign In</a>
			    		</li>
					<% } else { %>
					    <li>
							<a class="nav-link">Signed In As <%=currentUser.username %></a>
						</li>
						<li>
			    		<a  class="nav-link" href="/logout">Log Out</a>
			    		</li>
					<% } %>
			    	
			    	
			    </ul>
			</div>
		  </div>
		</nav>
		
		<div class="container">
			<% if(error && error.length>0){ %>
				<div class="alert alert-danger" role="alert">
					<%=error%>
				</div> 
			<% } %>
			<% if(success & success.length>0){ %>
				<div class="alert alert-success" role="alert">
					<%=success%>
				</div> 
			<% } %>
		</div>
		
